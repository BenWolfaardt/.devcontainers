// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Go",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "golang:1.22",
	"runArgs": [
		"--name", "devcontianer-go"
    ],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// https://github.com/devcontainers/features/tree/main/src
	"features": {
		// TODO: did work, but then it starting getting a GPG signing issue
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
			"upgradePackages": false
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/git": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/go:1": {}
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {},
			"extensions": [
				"mhutchie.git-graph"
			]
		}
	},

	// "forwardPorts": [],

	// Use 'portsAttributes' to set default properties for specific forwarded ports. 
	// More info: https://containers.dev/implementors/json_reference/#port-attributes
	// "portsAttributes": {
	// 	"9000": {
	// 		"label": "Hello Remote World",
	// 		"onAutoForward": "notify"
	// 	}
	// }

	"postCreateCommand": "go version"
	// "postCreateCommand": "/bin/sh -c './.devcontainer/postCreateCommand.sh'"  # Used for more complex `postCreateCommand`

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
